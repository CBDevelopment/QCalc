<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/button6"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:text="6"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button5"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:text="5"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button4"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/equalborder"
        android:gravity="right"
        android:textColor="@color/colorTrim"
        android:textSize="34sp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numberView"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginBottom="40dp"
        android:gravity="right"
        android:textColor="@color/colorText"
        android:textSize="44sp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <Button
        android:id="@+id/button1"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:onClick="buttonOnClick"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/zeroButton"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttonborder"
        android:text="0"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/equalsButton2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button9"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonborder"
        android:text="9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />

    <Button
        android:id="@+id/button7"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonborder"
        android:text="7"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonborder"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="94dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonborder"
        android:text="8"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/clearborder"
        android:text="C"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/divideButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/divideButton"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonbordercompute"
        android:text="+"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/multiplyButton" />

    <Button
        android:id="@+id/divideButton"
        android:layout_width="78dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonbordercompute"
        android:text="/"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/numberView" />

    <Button
        android:id="@+id/equalsButton"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/equalborder"
        android:text="="
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/zeroButton"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/equalsButton2"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/equalsButton3"
        android:layout_width="94dp"
        android:layout_height="35dp"
        android:layout_marginStart="188dp"
        android:layout_marginLeft="188dp"
        android:layout_marginBottom="4dp"
        android:background="@color/transparent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorText"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@+id/clearButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/multiplyButton"
        android:layout_width="78dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonbordercompute"
        android:text="*"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/divideButton" />

    <Button
        android:id="@+id/subtractButton"
        android:layout_width="78dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonbordercompute"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/equalsButton"
        app:layout_constraintTop_toBottomOf="@+id/addButton" />

</android.support.constraint.ConstraintLayout>